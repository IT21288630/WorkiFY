<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="@dimen/layout_width"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background_gradient" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/top_background" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView"
                    app:layout_constraintHorizontal_bias="0.076"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.636"
                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/profile_text"
                    android:textColor="#fff"
                    android:textSize="@dimen/viewReviewHeadtitle"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.592" />


                <ImageView
                    android:id="@+id/ViewbioCustomerImg"
                    android:layout_width="@dimen/view_review_description_navi"
                    android:layout_height="@dimen/view_review_description_naviHeight"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/ViewbioCustomer"
                    app:layout_constraintEnd_toEndOf="@+id/ViewbioCustomer"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/ViewbioCustomer"
                    app:layout_constraintTop_toTopOf="@+id/ViewbioCustomer"
                    app:srcCompat="@drawable/white_top_buttons" />


                <Button
                    android:id="@+id/ViewbioCustomer"
                    android:layout_width="@dimen/descript_navi_button"
                    android:layout_height="37dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:text="@string/cutomer_description"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/navigation_box"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/viewOrderImg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ViewOrdersCustomer"
                    app:layout_constraintEnd_toEndOf="@+id/ViewOrdersCustomer"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/ViewOrdersCustomer"
                    app:layout_constraintTop_toTopOf="@+id/ViewOrdersCustomer"
                    app:srcCompat="@drawable/white_top_buttons" />


                <Button
                    android:id="@+id/ViewOrdersCustomer"
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:text="@string/cutomer_orders"
                    android:textColor="#000"
                    android:textSize="@dimen/navigation_box"
                    app:layout_constraintEnd_toStartOf="@+id/imageView7"
                    app:layout_constraintHorizontal_bias="0.095"
                    app:layout_constraintStart_toEndOf="@+id/ViewbioCustomerImg"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/viewMyreviews"
                    app:layout_constraintEnd_toEndOf="@+id/viewMyreviews"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/viewMyreviews"
                    app:layout_constraintTop_toTopOf="@+id/viewMyreviews"
                    app:srcCompat="@drawable/purple_top_buttons" />


                <Button
                    android:id="@+id/viewMyreviews"
                    android:layout_width="101dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:text="@string/customer_reviews"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.916"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="53dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="8dp"
                    android:showText="true"
                    android:textOff="@string/MyreviewMode"
                    android:textOn="@string/sellerReviewMode"
                    android:thumb="@drawable/thumb1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.276"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ViewbioCustomerImg"
                    app:track="@drawable/track" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/cutomer_my_reviews"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/switch1"
                    app:layout_constraintTop_toBottomOf="@+id/ViewbioCustomerImg"
                    app:layout_constraintVertical_bias="0.364" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/cutomer_reviews_from_sellers"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.008"
                    app:layout_constraintStart_toEndOf="@+id/switch1"
                    app:layout_constraintTop_toBottomOf="@+id/viewOrderImg"
                    app:layout_constraintVertical_bias="0.06" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Dots3NavIconMarginStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:srcCompat="@drawable/dt"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="32dp" />


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="128dp"
                    android:text="@string/my_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/CutomerNameSizeOnProfile"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/testemail_gmail_com"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.536"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/cutomer_profile_rating"
                    android:textColor="#fff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.401"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="363dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/white_top_buttons" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/SellerProfilePhotoOnCutomerReviewWidth"
                android:layout_height="@dimen/SellerProfilePhotoOnCutomerReviewHeight"
                android:layout_marginEnd="276dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.179"
                app:srcCompat="@drawable/daco_4739617" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:text="@string/customer_review_title2"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                tools:layout_editor_absoluteX="137dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="@string/cutomerMyReviewView1"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/button9"
                app:layout_constraintHorizontal_bias="0.112"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                tools:layout_editor_absoluteY="87dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="@string/cutomerMyReviewEdit1"
                android:textSize="10dp"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="87dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:text="@string/cutomerMyReviewDelete2"
                android:textSize="10dp"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="194dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:background="@android:color/transparent"
                android:text="@string/cutomerMyReviewDelete1"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@+id/button7"
                tools:layout_editor_absoluteY="87dp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="65dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/button9"
                app:layout_constraintStart_toStartOf="@+id/button9"
                app:layout_constraintTop_toTopOf="@+id/button9"
                app:layout_constraintVertical_bias="0.3"
                app:srcCompat="@drawable/cancel_buttons" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="252dp"
                android:layout_height="189dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="170dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Layout_margin_review_title"
            android:text="@string/customer_review_title3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>