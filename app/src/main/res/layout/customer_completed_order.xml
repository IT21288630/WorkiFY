<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal">


<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="top"
    app:srcCompat="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CusCompletedOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NewOrdersID"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/customerCompletedOrderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NewTitleDesc"
                    android:textSize="15sp"></TextView>

            </LinearLayout>

            <Button
                android:id="@+id/AddReviewCustomerCompleteOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="#6672FF"
                android:text="@string/AddReveiewCustomer"
                android:textSize="10sp"
                app:cornerRadius="30dp"></Button>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>
