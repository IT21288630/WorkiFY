<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:paddingTop="10dp"
    android:background="@drawable/list_border_style"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sellers_review_name_on_Sel_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/WorkerName"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/sellers_review_title_on_Sel_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/sellers_review_star_on_sel_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/RateOutOf"
                    android:textSize="15sp">

                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/rate5"
                    app:srcCompat="@drawable/star" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ShowreviewcutomerViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#6672FF"
            android:text="@string/view_cutomer_review_btn"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:cornerRadius="30dp">

        </Button>

        <Button
            android:id="@+id/ShowreviewcutomerEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#6672FF"
            android:text="@string/edit_review_heading"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:cornerRadius="30dp">

        </Button>

        <Button
            android:id="@+id/ShowreviewcutomerDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/deleteBtn"
            android:text="@string/cutomerMyReviewDelete"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:cornerRadius="30dp">

        </Button>

    </LinearLayout>


</LinearLayout>